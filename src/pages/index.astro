---
import PasswordDiscovery from '../components/PasswordDiscovery.tsx'
import DrawingHangman from '../components/DrawingHangman.svelte'
import PickLetter from '../components/PickLetter.vue'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>The Hangman</title>
  </head>
  <body class="bg-gray-800">
    <main class="p-12 text-center">
      <h1 class="text-2xl text-white">The Hangman</h1>
      <button
        id="start"
        class="bg-green-800 hover:bg-green-600 py-3 px-6 m-12 font-bold uppercase text-white"
      >
        Start
      </button>
      <PasswordDiscovery client:load />
      <DrawingHangman client:load />
      <PickLetter client:load />
    </main>
    <script>
      import { passwordStore, resetPasswordAction } from '../store'

      document.getElementById('start').addEventListener('click', () => {
        resetPasswordAction()
        document.getElementById('start').className = 'hidden'
      })
    </script>
  </body>
</html>
